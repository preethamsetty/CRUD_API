{
  "env": {
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier" 
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": "warn", 
    "semi": ["error", "always"], 
    "quotes": ["error", "single"], 
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }] 
  }
}
